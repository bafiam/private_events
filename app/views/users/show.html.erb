<div class="container-fluid">

<h1>Profile</h1>
<p>Welcome <b><%= @user.name %></b></p>
<h3 style="margin-left:380px">Your created events</h3>

<%if @user.events[0].nil?%>
  <li>You have not created any event. Create one first!!</li>
<%else%>
  
    <table class="table table-dark">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Event name:</th>
      
    </tr>
  </thead>
  <% @user.events.each do |event| %> 
  <tbody>
    <tr>
      <th scope="row">1</th>
      <td><%= event.name%></td>
    </tr>
  </tbody>
  <% end %>
  
</table>
  
  <%end%>


<h3 style="margin-left:380px">Your attended events</h3>

<h3>Upcoming events</h3>

<table class="table table-dark">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Event name:</th>
      <th scope="col">Event description:</th>
      
    </tr>
  </thead>
  <%@upcoming_events.each do |event| %>
  <tbody>
    <tr>
      <th scope="row">1</th>
      <td><%= event.name%></td>
      <td><%= event.description%></td>
    </tr>
  </tbody><% end %>
  
</table>


<h3>Previous events</h3>

<table class="table table-dark">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Event name:</th>
      <th scope="col">Event description:</th>
      
    </tr>
  </thead>
  <%@prev_events.each do |event| %>
  <tbody>
    <tr>
      <th scope="row">1</th>
      <td><%= event.name%></td>
      <td><%= event.description%></td>
    </tr>
  </tbody><% end %>
  
</table>

</div>


