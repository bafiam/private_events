<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: signup_path   do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
    
    <div class= "container" style="padding-top:20px;">I have an account aready!<%= link_to "Log in", login_path %></div>
  </div>
  
</div>
