<h1>Login</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <% if flash.now[:danger]%>
      <%= flash.now[:danger]%>
  <%end%>
    <%= form_for(:session, url: login_path) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.submit "Login", class: "btn btn-success" %>
    <% end %>
    <div class= "container" style="padding-top:20px;">I dont have an account. Create one..<%= link_to "Sign up", signup_path %></div>
  </div>
</div>