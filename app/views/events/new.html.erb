<% provide(:title, "Create Event")%>
<h1>Create Event</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @event, url: events_path do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.label :date %>
      <%= f.date_field :date %>
      <%= f.submit "Create my event", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>