<h1>All Events</h1>
<div class="container-fluid">
<div class= "container center"><h2>Past Events</h2></div>

<% @past.each do |event| %>
<table class="table table-dark">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Event name:</th>
      <th scope="col">Event description:</th>
      
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">1</th>
      <td><%= event.name%></td>
      <td><%= event.description%></td>
    </tr>
  </tbody>
  
</table>
<% end %>
</div>
<div class="container-fluid">
<div class= "container center"><h2>Upcoming Events</h2></div>

<% @upcoming.each do |event| %>
<table class="table table-dark">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Event name:</th>
      <th scope="col">Event description:</th>
      
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">1</th>
